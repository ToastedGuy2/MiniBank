@model SignUpViewModel
@{
    ViewBag.Title = "Sign Up";
    Layout = "_LayoutForSignInAndUp";
}
<form class="p-5 shadow rounded mx-auto" asp-controller="Account" asp-action="SignUp" method="post">
    <h1 class="text-center">Sign Up</h1>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input type="text" class="form-control" asp-for="Username" placeholder="117100202">
        <span class="text-danger" asp-validation-for="Username">@ViewData["UserError"]</span>
    </div>
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input type="text" class="form-control" asp-for="FullName" placeholder="Kevin Jose Ordonez Zelaya">
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input type="date" class="form-control" asp-for="BirthDate"/>
        <span class="text-danger" asp-validation-for="BirthDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" class="form-control" asp-for="Email" placeholder="test@test.com"/>
        <span class="text-danger" asp-validation-for="Email">@ViewData["EmailError"]</span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input type="password" class="form-control" asp-for="Password" placeholder="**********"/>
        <span class="text-danger" asp-validation-for="Password">
            @ViewData["PasswordError"]
        </span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="**********"/>
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
    <a asp-controller="Account" asp-action="SignIn" class="btn btn-danger">Cancel</a>
</form>